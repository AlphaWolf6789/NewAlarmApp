<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/world_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AlarmFragment"
    android:background="@color/main_background"
    android:padding="10dp">
    // Sua nhieu thu
    <TextView
        android:id="@+id/txt_world_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="08 : 00"
        android:textColor="@color/white"
        android:textSize="70dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_current_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_world_time"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Current: Sat, Jul 23"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <ListView
        android:id="@+id/lv_timeZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_current_date"
        android:layout_marginTop="30dp"
        android:dividerHeight="10dp"
        android:divider="@color/main_background"
        android:layout_marginBottom="70dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_addWorldTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_nav"
        android:backgroundTint="@color/color_yellow"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:borderWidth="0dp"
        android:src="@drawable/ic_plus" />
</RelativeLayout>